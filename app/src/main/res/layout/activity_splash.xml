<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".splashActivity"
    android:background="#2A2E43"
    android:orientation="vertical"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/applogo"
        android:id="@+id/splash1"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:text="Welcome"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="60dp"
        android:typeface="sans" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Now book your e-rikshaw anywhere anytime"
        android:textColor="#f9f6f6"
        android:textAlignment="center"
        android:textSize="15dp"
        android:typeface="sans" />

    <TextView
        android:layout_width="350dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_height="50dp"
        android:text="Sign in"
        android:id="@+id/firstpagesignin"
        android:textColor="#f9f6f6"
        android:background="@drawable/blueboder"
        android:textAlignment="center"
        android:textSize="15dp"
        android:paddingTop="12dp"
        android:typeface="sans" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:text="Not have account yet?"
        android:textColor="#f9f6f6"
        android:textAlignment="center"
        android:textSize="15dp"
        android:typeface="sans" />
    <TextView
        android:layout_width="350dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_gravity="center"
        android:layout_height="50dp"
        android:text="Sign up"
        android:id="@+id/firstpagesignup"
        android:textColor="#f9f6f6"
        android:background="@drawable/greyborder"
        android:textAlignment="center"
        android:textSize="15dp"
        android:paddingTop="12dp"
        android:typeface="sans" />


</LinearLayout>