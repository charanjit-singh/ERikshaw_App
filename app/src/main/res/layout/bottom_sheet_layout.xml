<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomlayout_1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bluedark"
    android:orientation="vertical"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/activity_horizontal_margin"
        android:background="@drawable/bluedark"
        android:padding="@dimen/activity_horizontal_margin">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2">


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlContent"
            android:layout_width="0dp"
            android:padding="@dimen/activity_horizontal_margin" android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="@string/label_title"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:textAppearance="?android:textAppearanceLarge" />

            <TextView
                android:id="@+id/tvSubTitle"
                android:textColor="#e2dcdc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvTitle"
                android:text="@string/label_sub_title"
                android:textAppearance="?android:textAppearanceSmall" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.1"
            android:background="@drawable/blueboder"
            android:gravity="end">

            <TextView
                android:id="@+id/ivClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="Request Ride"
                android:paddingRight="12dp"
                android:layout_marginRight="15dp"
                android:textAlignment="center"
                android:textColor="#ffffff"
               android:paddingTop="12dp"
                 android:layout_alignParentTop="true"
                />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>